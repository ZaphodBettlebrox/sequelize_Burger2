<div class="container">
  <div class="row">
    <div class=" text-center col-md-12">
      <h1 class="title">OMM NOM NOMMM!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <img src="/assets/burger-logo.png" alt="burger" class=" logo">
    </div>
  </div>
  <div class="row top-margin">
    <div class="col-md-6 text-center">
      <h2>Burgers that are not devoured!</h2>
      <br>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 text-center">
      <h2>Burgers that are devoured!</h2>
      <br>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Add a Burger</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <form class="create-form">

        <div class="form-group">
          <label for="burgerboy">Burger Name:</label>
          <input type="text" id="burgerboy" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Have you ate this one yet?</label><br>
          <input type="radio" name="devoured" value="1" checked> devoured!<br>
          <input type="radio" name="devoured" value="0"> Still steamy!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>

